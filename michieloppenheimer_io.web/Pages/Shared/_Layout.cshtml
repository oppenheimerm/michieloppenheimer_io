<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Michiel Oppenheimer - @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/styles/default.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/michieloppenheimer_io.web.styles.css" asp-append-version="true" />
</head>
<body>
    <div id="app">
        <partial name="_Mobile__header" />
        
        <div class="main__content">
            @RenderBody()
        </div>

        <footer class="border-top footer text-muted">
            <section id="footer" class="section">
                <div class="footer__wrap container flex">
                    <div class="footer__col-left">
                        <a class="footer__logo-link" href="#">
                            <img asp-append-version="true" src="~/img/assets/logo.png" width="40" height="20" alt="MO" />
                        </a>
                        <div class="footer__small-print ">
                            &copy; @System.DateTime.Now.Year - Michiel Oppenheimer. <br />
                            All rights reserved.
                        </div>
                    </div>
                    <div class="footer__col-right">
                        <ul class="footer__links flex">

                            <li class="footer_link-item"><a asp-page="/index">Home</a></li>
                            <li class="footer_link-item"><a asp-page="/blog/index">Blog</a></li>
                            <li class="footer_link-item"><a href="#">Projects</a></li>
                        </ul>
                    </div>
                </div>
            </section>
        </footer>
    </div>

    
    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/highlight.min.js"></script> 
    <script>hljs.highlightAll();</script>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
    <script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>
    <script src="~/js/main.js" asp-append-version="true" type="module"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>